@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>GawaPH Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        .card-stats {
            border-radius: 10px;
            padding: 1rem;
        }

        .rounded-icon {
            border-radius: 50%;
            width: 40px;
            height: 40px;
            background-color: #eee;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 2rem 0;
            font-size: 0.9rem;
        }

        .text-muted {
            color: #6c757d !important;
        }
    </style>
</head>
<body>
    <div class="container my-4">
        <!-- Profile Card -->
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="https://via.placeholder.com/60" class="rounded-circle mb-2" alt="Profile Picture" />
                        <h5 class="card-title mb-0">Jino</h5>
                        
                        <span class="badge bg-primary mb-2"><i class="fa fa-star"></i> 5</span>

                        <ul class="list-group list-group-flush text-start mt-3">
                            <li class="list-group-item">Inbox response rate: <span class="float-end">100%</span></li>
                            <li class="list-group-item">Inbox response time: <span class="float-end">N/A</span></li>
                            <li class="list-group-item">Order response rate: <span class="float-end">100%</span></li>
                            <li class="list-group-item">Delivered on time: <span class="float-end">100%</span></li>
                            <li class="list-group-item">Order completion: <span class="float-end">100%</span></li>
                        </ul>
                        <div class="mt-3">
                            <strong>Total Earnings (Aug) = ₱12</strong>
                        </div>
                        <a href="#" class="btn btn-link mt-2">View All</a>
                    </div>
                </div>
            </div>

            <!-- Orders and Tips -->
            <div class="col-md-9">
                <div class="row g-3">
                    <!-- Orders Cards -->
                    <div class="col-md-6">
                        <div class="card bg-primary text-white card-stats">
                            <div class="card-body">
                                <h6>Active Orders – 5 (₱120)</h6>
                                <button class="btn btn-light btn-sm mt-2">Active Orders</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-secondary text-white card-stats">
                            <div class="card-body">
                                <h6>Completed Orders – 1 (₱12)</h6>
                                <button class="btn btn-light btn-sm mt-2">Check Orders</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tips Section -->
                <div class="card mt-4">
                    <div class="card-header">
                        Upgrade Your Business
                    </div>
                    <div class="card-body">
                        <h5>3 steps to become a top seller on GawaPH</h5>
                        <p class="text-muted">The key to your success on Fiverr is the brand you build for yourself... </p>

                        <div class="row text-center">
                            <div class="col-md-4">
                                <h6>Get noticed</h6>
                                <p>Tap into social media by sharing your Gig, and get expert help to grow.</p>
                                <button class="btn btn-outline-primary btn-sm">Share Your Gigs</button>
                            </div>
                            <div class="col-md-4">
                                <h6>Get more skills & exposure</h6>
                                <p>Take courses, expand your services and gain more exposure.</p>
                                <button class="btn btn-outline-primary btn-sm">Explore Learn</button>
                            </div>
                            <div class="col-md-4">
                                <h6>Become a successful seller!</h6>
                                <p>Watch our free course and grow your freelance career.</p>
                                <button class="btn btn-outline-primary btn-sm">Watch Free Course</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer mt-5">
            <div class="row text-center text-md-start">
                <div class="col-md-2 mb-3 mx-3">
                    <h5>GawaPH</h5>
                    <p>GawaPH is a local freelance job portal that connects clients and freelancers across the Philippines.</p>
                    <a href="#"><i class="fab fa-instagram me-2"></i></a>
                    <a href="#"><i class="fab fa-twitter me-2"></i></a>
                    <a href="#"><i class="fab fa-facebook"></i></a>
                </div>
                <div class="col-md-3 mb-3">
                    <h6>For Clients</h6>
                    <ul class="list-unstyled">
                        <li><a href="#">Find Freelancers</a></li>
                        <li><a href="#">Post Project</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h6>For Freelancers</h6>
                    <ul class="list-unstyled">
                        <li><a href="#">Find Work</a></li>
                        <li><a href="#">Create Account</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h6>Call Us</h6>
                    <p><i class="fas fa-map-marker-alt me-2"></i>Philippines</p>
                    <p><i class="fas fa-phone me-2"></i>+254700000000</p>
                    <p><i class="fas fa-envelope me-2"></i>gawaph@gmail.com</p>
                </div>
            </div>
            <div class="text-center mt-4 text-muted">2025 GawaPH. All rights reserved</div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
